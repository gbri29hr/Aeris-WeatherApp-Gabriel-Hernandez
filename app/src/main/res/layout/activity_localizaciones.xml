<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLowest"
    tools:context=".view.activities.LocalizacionesActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_localizaciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="@string/ubicaciones_titulo"
        app:titleCentered="true"
        android:background="?attr/colorSurfaceContainerLowest"
        app:titleTextAppearance="?attr/textAppearanceHeadlineMedium" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/locations_search_bar_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/ubicaciones_buscar_ciudad"
        app:layout_constraintTop_toBottomOf="@id/toolbar_localizaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_add_location"
        app:startIconDrawable="@drawable/ic_buscar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/locations_search_bar_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSearch"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_add_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_anadir"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="?attr/colorPrimary"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/btn_delete_mode"
        app:layout_constraintTop_toTopOf="@id/locations_search_bar_layout"
        app:layout_constraintBottom_toBottomOf="@id/locations_search_bar_layout"
        android:contentDescription="@string/ubicaciones_anadir" />

    <ImageButton
        android:id="@+id/btn_delete_mode"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_eliminar"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        app:tint="?attr/colorError"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locations_search_bar_layout"
        app:layout_constraintBottom_toBottomOf="@id/locations_search_bar_layout"
        android:contentDescription="@string/ubicaciones_eliminar" />

    <TextView
        android:id="@+id/locations_manage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/ubicaciones_gestionar"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locations_search_bar_layout" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_usar_ubicacion"
        style="?attr/materialCardViewOutlinedStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/locations_manage_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_localizacion"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/ubicaciones_usar_actual"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locations_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/card_usar_ubicacion"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:listitem="@layout/item_localizacion" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_nav_inferior"
        android:elevation="8dp"
        app:itemIconTint="@color/color_nav_inferior"
        app:itemTextColor="@color/color_nav_inferior"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/inferior_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
