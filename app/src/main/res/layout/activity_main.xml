<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MainActivity">

    <!-- Navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_nav_inferior"
        android:elevation="8dp"
        app:itemIconTint="@color/color_nav_inferior"
        app:itemTextColor="@color/color_nav_inferior"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/inferior_nav_menu" />

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:fillViewport="true">

        <!-- Contenedor vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Cabecera con ciudad y selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/main_text_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Ciudad Real" />

                <ImageButton
                    android:id="@+id/main_button_select_city"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_ubicacion"
                    app:tint="?attr/colorPrimary"
                    android:contentDescription="@string/main_seleccionar_ciudad" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Martes, Oct 28, 11:30 AM" />

            <!-- Información principal del clima -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <!-- Icono del clima -->
                <ImageView
                    android:id="@+id/main_image_weather"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:tint="?attr/colorOnSurface"
                    android:contentDescription="@string/desc_icono_clima"
                    tools:src="@drawable/ic_sol" />

                <!-- Temperatura actual -->
                <TextView
                    android:id="@+id/main_text_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="96sp"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:translationX="16dp"
                    tools:text="20°" />

                <!-- Descripción -->
                <TextView
                    android:id="@+id/main_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-16dp"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:translationX="2dp"
                    tools:text="Soleado" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?attr/colorOutlineVariant" />

            <!-- Temperaturas máxima y mínima -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/main_text_min"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/main_min"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="start"
                    tools:text="MIN: 10°" />

                <TextView
                    android:id="@+id/main_text_max"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/main_max"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="end"
                    tools:text="MAX: 23°" />
            </LinearLayout>

            <!-- Detalles del clima -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false">

                <!-- Humedad -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_humedad"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/desc_humedad" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/main_humedad"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <TextView
                            android:id="@+id/detail_humedad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="60%" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Viento -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_viento_velocidad"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/desc_viento" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/main_viento"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <TextView
                            android:id="@+id/detail_viento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="10 KM/h" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Índice UV -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_uv"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/desc_uv" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/main_indice_uv"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <TextView
                            android:id="@+id/detail_uv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center"
                            tools:text="7 (Alto)" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Precipitación -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_lluvia"
                            app:tint="?attr/colorPrimary"
                            android:contentDescription="@string/desc_lluvia" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="@string/main_precipitacion"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="11sp" />
                        <TextView
                            android:id="@+id/detail_precipitacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="10%" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Botón para desplazar hacia abajo -->
            <ImageButton
                android:id="@+id/main_button_scroll_down"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_flecha_abajo"
                android:scaleType="fitCenter"
                android:padding="8dp"
                app:tint="?attr/colorPrimary"
                android:contentDescription="@string/ver_mas_detalles" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?attr/colorOutlineVariant" />

            <!-- Pronóstico por horas -->
            <TextView
                android:id="@+id/main_title_hourly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/main_pronostico_horario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recycler_hourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_prediccion_horas" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?attr/colorOutlineVariant" />

            <!-- Pronóstico por días -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/main_pronostico_diario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recycler_daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_prediccion_dias" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
